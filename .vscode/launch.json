{
  "configurations": [
    {
      "name": "Client (8080)",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceRoot}/packages/client",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "dev"]
    },
    {
      "name": "Server",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceRoot}/packages/server/server.go"
    },
    {
      "name": "Generate GQL",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/packages/server/cmd/generate.go"
    }
  ],
  "compounds": [
    {
      "name": "Start All",
      "configurations": ["Client (8080)", "Server"]
    }
  ]
}